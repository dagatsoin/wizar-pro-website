{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [ "./src/*" ]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}